<ul>
  <% @articles.each do |article| %>
    <%= link_to "/articles/#{article.id}" do %>
      <li>
        <div class="row">
          <div class="col s12 m6">
            <div class="card teal lighten-2">
              <div class="card-content white-text">
                <span class="card-title"><%= article.title %></span>
                <p><%= article.body %></p>
              </div>
              <div class="card-action">
                <% if user_signed_in? && current_user.id == article.user_id %>
                  <%= link_to "EDIT", edit_article_path(article), method: :get %>
                  <%= link_to "DELETE", "/articles/#{article.id}", method: :delete %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </li>
    <% end %>
  <% end %>
</ul>

<% if user_signed_in? %>
  <%= link_to new_article_path, method: :get do %>
    <div class="fixed-action-btn">
      <div class="btn-floating btn-large red">
        <i class="material-icons">create</i>
      </div>
    </div>
  <% end %>
<% end %>