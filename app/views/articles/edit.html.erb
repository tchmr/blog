<div class="container">
  <div class="row">
    <div class="col s12 m8 offset-m2">
      <%= form_for @article do |f| %>
        <%= f.text_field :title, placeholder: "タイトル" %>
        <%= f.rich_text_area :body, placeholder: "本文", size: "40x40" %>
        <%= f.submit value: "更新する", class: "btn waves-effect waves-light" %>
      <% end %>
    </div>
  </div>
</div>